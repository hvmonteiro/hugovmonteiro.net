    "version": "0.2.0",
    "compounds": [
        {
            "name": "Server/ClientFirefox",
            "configurations": ["Launch .NET6 (no web)", "Launch Firefox"]
        }
    ],  
    "configurations": [

        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080/",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Firefox Developer Edition",
            "program": "C:\Program Files\Firefox Developer Edition\firefox.exe",
            "url": "http://localhost:1313/",
        },
        {
            "type": "firefox",
            "name": "Firefox on Hugo website",
            "request": "launch",
            "preLaunchTask": "Start Hugo devel server",
            "url": "http://localhost:1313/",
          },
          // created by VS Code
          {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch localhost",
            "url": "http://localhost:1313/"
          },
    ]
}